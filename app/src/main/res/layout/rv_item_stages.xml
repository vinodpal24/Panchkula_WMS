<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_7"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/main_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_8"
        app:cardCornerRadius="@dimen/size_8"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layoutStageItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_stage_item_freeze"
            android:orientation="vertical"
            android:paddingVertical="@dimen/size_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/size_8"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    

                    <LinearLayout
                        android:id="@+id/layoutStageName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toStartOf="@+id/layoutOpenQty"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/layoutOpenQty"
                        app:layout_constraintWidth_percent="0.66">

                        <TextView
                            android:id="@+id/tvStageNameLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:text="Stage Name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_12"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvStageName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:paddingEnd="@dimen/size_8"
                            android:text="Drawing"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_12" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutOpenQty"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_10"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/layoutStageName"
                        app:layout_constraintTop_toTopOf="@+id/layoutStageName"
                        app:layout_constraintWidth_percent="0.34">

                        <TextView
                            android:id="@+id/tvOpenQtyLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:text="Open Qty."
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_12"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvOpenQty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:paddingEnd="@dimen/size_8"
                            android:text="1000.00"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_12" />


                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/size_10"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:id="@+id/layoutAcceptQty"
                        android:layout_width="0dp"
                        android:layout_weight="0.33"
                        android:layout_marginEnd="@dimen/size_10"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="Accept Quantity"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="12sp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilAcceptQty"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_45"
                            android:visibility="visible"
                            app:boxCornerRadiusBottomEnd="@dimen/size_8"
                            app:boxCornerRadiusBottomStart="@dimen/size_8"
                            app:boxCornerRadiusTopEnd="@dimen/size_8"
                            app:boxCornerRadiusTopStart="@dimen/size_8">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etAcceptQty"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_40"
                                android:fontFamily="@font/muli_bold"
                                android:background="@drawable/bg_batch_items"
                                android:inputType="numberDecimal"
                                android:text="0.00"
                                android:textSize="14sp" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutRejectQty"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_10"
                        android:layout_weight="0.33"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="Reject Quantity"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="12sp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilRejectQty"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_45"
                            app:boxCornerRadiusBottomEnd="@dimen/size_8"
                            app:boxCornerRadiusBottomStart="@dimen/size_8"
                            app:boxCornerRadiusTopStart="@dimen/size_8"
                            app:boxCornerRadiusTopEnd="@dimen/size_8"
                            android:visibility="visible">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etRejectQty"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_40"
                                android:background="@drawable/bg_batch_items"
                                android:fontFamily="@font/muli_bold"
                                android:inputType="numberDecimal"
                                android:text="0.00"
                                android:textSize="14sp" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    
                    <Button
                        android:id="@+id/btnStageUpdate"
                        android:background="@drawable/bg_button_rounded"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_40"
                        android:layout_weight="0.34"
                        android:layout_gravity="bottom"
                        android:text="Save"
                        />

                </LinearLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRmItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_margin="@dimen/size_4"
                android:layout_marginTop="@dimen/size_8"
                tools:itemCount="1"
                tools:listitem="@layout/rv_item_rm" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>