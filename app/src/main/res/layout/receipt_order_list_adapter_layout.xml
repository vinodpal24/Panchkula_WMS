<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/size_10"
        android:layout_margin="5dp"
        android:elevation="5dp">
                <LinearLayout
                    android:id="@+id/scaned_item_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_border"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/size_10"
                    android:visibility="visible">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layoutTop"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            app:layout_constraintTop_toTopOf="@+id/ivRemoveGoodsItem"
                            app:layout_constraintEnd_toStartOf="@+id/ivRemoveGoodsItem"
                            app:layout_constraintStart_toStartOf="parent">

                            <LinearLayout
                                android:id="@+id/layoutItemCode"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/layoutItemName"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintWidth_percent="0.4">

                                <TextView
                                    android:id="@+id/tvItemCodeLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:includeFontPadding="false"
                                    android:text="Item Code"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_13"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvItemCode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:includeFontPadding="false"
                                    android:paddingEnd="@dimen/size_8"
                                    android:text="672511000024"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_12" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layoutItemName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/layoutItemCode"
                                app:layout_constraintTop_toTopOf="@+id/layoutItemCode"
                                app:layout_constraintWidth_percent="0.6">

                                <TextView
                                    android:id="@+id/tvItemNameLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:includeFontPadding="false"
                                    android:text="Item Name"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_13"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvItemName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:includeFontPadding="false"
                                    android:paddingEnd="@dimen/size_8"
                                    android:text="FG-Name"
                                    android:textAllCaps="true"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_12" />


                            </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <ImageView
                            android:id="@+id/ivRemoveGoodsItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size_2"
                            android:src="@drawable/ic_cross"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/red" />
                        
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TableRow
                        android:id="@+id/deliveryDateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_5"
                        android:paddingTop="3dp"
                        android:visibility="visible"
                        android:paddingBottom="3dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/ed_price"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginVertical="@dimen/size_5"
                                android:layout_marginEnd="@dimen/size_5"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_border"
                                android:fontFamily="@font/muli_bold"
                                android:gravity="center"
                                android:hint="Price"
                                android:inputType="numberDecimal"
                                android:padding="8sp"
                                android:singleLine="true"

                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/ed_qty"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:padding="8sp"
                                android:layout_marginVertical="@dimen/size_5"
                                android:layout_marginStart="@dimen/size_5"
                                android:background="@drawable/rounded_border"
                                 android:fontFamily="@font/muli_bold"
                                android:hint="Quantity"
                                android:text=""
                                android:gravity="center"
                                android:inputType="numberDecimal"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                        </LinearLayout>


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edSize"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginVertical="@dimen/size_5"
                                android:layout_marginEnd="@dimen/size_5"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_border"
                                android:fontFamily="@font/muli_bold"
                                android:gravity="center"
                                android:hint="Size"
                                android:inputType="numberDecimal"
                                android:padding="8sp"
                                android:singleLine="true"

                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/batch_no"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:padding="8sp"
                                android:layout_marginVertical="@dimen/size_5"
                                android:layout_marginStart="@dimen/size_5"
                                android:background="@drawable/rounded_border"
                                android:fontFamily="@font/muli_bold"
                                android:hint="Enter Batch No"
                                android:text=""
                                android:gravity="center"
                                android:inputType="numberDecimal"

                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </TableRow>

                </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>