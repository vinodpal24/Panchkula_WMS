<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_onback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_back_24" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/muli_bold"
                    android:paddingLeft="8sp"
                    android:text="@string/components"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_item_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/muli_regular"
                    android:paddingLeft="8sp"
                    android:text=" "
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="right">

                <EditText
                    android:id="@+id/iv_laser_code"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@color/transparent_color"
                    android:textColor="#ffffff"
                    android:textCursorDrawable="@drawable/custom_cursor">

                </EditText>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_scan_batch_code"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="8sp"
                    android:src="@drawable/ic_baseline_qr_code_scanner_24"
                    android:visibility="gone" />


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/recycler_view_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/size_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/scan_View"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/size_5"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/muli_bold"
                        android:paddingBottom="@dimen/size_2"
                        android:text="Vendor Ref. No."
                        android:textSize="12sp" />


                    <EditText
                        android:id="@+id/etVendorRefNo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_40"
                        android:background="@drawable/round_gray_backgruand"
                        android:fontFamily="@font/muli_bold"
                        android:hint="Vendor Ref. No."
                        android:paddingLeft="8sp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutQtySeries"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/size_10"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/muli_bold"
                        android:text="Doc Series"
                        android:textSize="12sp"
                        android:visibility="visible" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutSeries"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-3dp"
                        android:hint="Select Series"
                        app:endIconMode="dropdown_menu">

                        <AutoCompleteTextView
                            android:id="@+id/acSeries"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_40"
                            android:backgroundTint="@color/white"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="text"
                            android:paddingLeft="@dimen/size_10"
                            android:paddingRight="@dimen/size_10"
                            android:textSize="@dimen/text_size_12" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/size_5"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/muli_bold"
                        android:paddingBottom="@dimen/size_2"
                        android:text="Posting Date"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etPostingDate"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_40"
                        android:background="@drawable/round_gray_backgruand"
                        android:clickable="true"
                        android:drawableEnd="@drawable/baseline_calendar_month_24"
                        android:focusable="false"
                        android:fontFamily="@font/muli_bold"
                        android:hint="Posting Date"
                        android:paddingLeft="8sp"
                        android:paddingEnd="@dimen/size_10"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/size_10"
                    android:paddingBottom="@dimen/size_5"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/muli_bold"
                        android:paddingBottom="@dimen/size_2"
                        android:text="Invoice Date"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etInvoiceDate"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_40"
                        android:background="@drawable/round_gray_backgruand"
                        android:clickable="true"
                        android:drawableEnd="@drawable/baseline_calendar_month_24"
                        android:focusable="false"
                        android:fontFamily="@font/muli_bold"
                        android:hint="Invoice Date"
                        android:paddingLeft="8sp"
                        android:paddingEnd="@dimen/size_10"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/remarkView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.50"
                    android:paddingBottom="@dimen/size_5"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/muli_bold"
                        android:paddingBottom="@dimen/size_2"
                        android:text="Remarks"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etRemarks"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_40"
                        android:background="@drawable/round_gray_backgruand"
                        android:fontFamily="@font/muli_bold"
                        android:hint="Remark Value"
                        android:paddingLeft="8sp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/currencyView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/size_10"
                    android:layout_weight="0.50"
                    android:paddingBottom="@dimen/size_5"
                    android:visibility="visible">

                    <TextView
                      android:id="@+id/tvCurrencyLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/muli_bold"
                        android:paddingBottom="@dimen/size_2"
                        android:text="Currency (USD)"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etCurrency"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_40"
                        android:background="@drawable/round_gray_backgruand"
                        android:fontFamily="@font/muli_bold"
                        android:hint="Currency Value"
                        android:paddingLeft="8sp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutWarehouseCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/muli_bold"
                    android:text="Warehouses"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayoutWarehouse"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-3dp"
                    android:hint="Select Warehouse"
                    app:endIconMode="dropdown_menu">

                    <AutoCompleteTextView
                        android:id="@+id/acWarehouse"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_40"
                        android:backgroundTint="@color/white"
                        android:clickable="true"
                        android:focusable="false"
                        android:inputType="text"
                        android:paddingLeft="@dimen/size_10"
                        android:paddingRight="@dimen/size_10"
                        android:textSize="@dimen/text_size_12" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvProductionOrderList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/size_5"
            android:visibility="visible"
            tools:itemCount="10"
            tools:listitem="@layout/purchase_transfer_lines_adapter_layout" />

        <ImageView
            android:id="@+id/iv_no_data_found"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:src="@drawable/nodatafound"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="visible">

        <com.google.android.material.chip.ChipGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_cancel"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:elevation="2dp"
                android:fontFamily="@font/muli_bold"
                android:text="Cancel"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                app:chipBackgroundColor="@color/my_app_background_color"
                app:chipIconTint="@color/colorPrimary"
                app:chipStrokeColor="@color/colorPrimary"
                app:chipStrokeWidth="1dp"
                app:rippleColor="@color/colour_text_color" />
        </com.google.android.material.chip.ChipGroup>

        <com.google.android.material.chip.ChipGroup
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_save"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:elevation="2dp"
                android:fontFamily="@font/muli_bold"
                android:gravity="center_horizontal"
                android:text="Save"
                android:textAlignment="center"
                android:textColor="@color/my_app_background_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:chipBackgroundColor="@color/colorPrimary"
                app:chipIconTint="@color/colorPrimary"
                app:chipStrokeColor="@color/colorPrimary"
                app:chipStrokeWidth="1dp"
                app:rippleColor="@color/colour_text_color" />
        </com.google.android.material.chip.ChipGroup>
    </LinearLayout>


</LinearLayout>