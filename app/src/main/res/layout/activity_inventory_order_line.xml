<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_onback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_arrow_back_24" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/muli_bold"
                        android:paddingLeft="8sp"
                        android:text="@string/components"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_item_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/muli_regular"
                        android:paddingLeft="8sp"
                        android:text=" "
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:gravity="right">

                    <EditText
                        android:id="@+id/iv_laser_code"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@color/transparent_color"
                        android:textColor="#ffffff"
                        android:textCursorDrawable="@drawable/custom_cursor">

                    </EditText>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_scan_batch_code"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="8sp"
                        android:visibility="gone"
                        android:src="@drawable/ic_baseline_qr_code_scanner_24" />


                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/recycler_view_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/size_10"
            android:gravity="center_vertical|center"
            android:orientation="vertical">
            <TableRow
                android:id="@+id/doc_View"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/size_8"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/doc_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/muli_bold"
                    android:text="Doc Type :  "
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/round_gray_backgruand"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center_vertical"
                    android:hint="Scan Item"
                    android:orientation="horizontal"
                    android:paddingTop="5sp"
                    android:paddingBottom="5sp"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxStrokeColor="@color/colorPrimary">


                    <Spinner
                        android:id="@+id/ed_docType"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:backgroundTint="@color/my_app_background_color"
                        android:fontFamily="@font/muli_bold"
                        android:hint="Warehouse code scan"
                        android:text=""

                        android:paddingLeft="8sp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="12sp" />


                </LinearLayout>
            </TableRow>
            <TableRow
                android:id="@+id/scan_View"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/size_5"
                >

                <TextView
                    android:id="@+id/qr_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/muli_bold"
                    android:text="NumCart :  "
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_40"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/round_gray_backgruand"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center_vertical"
                    android:hint="Scan Item"
                    android:orientation="horizontal"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxStrokeColor="@color/colorPrimary">

                    <EditText
                        android:id="@+id/ed_batch_code_scan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:backgroundTint="@color/my_app_background_color"
                        android:fontFamily="@font/muli_bold"
                        android:hint="NumCart Value"
                        android:text=""
                        android:paddingLeft="8sp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="12sp" />


                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/layoutDocDate"
                android:visibility="gone"
                android:layout_marginTop="@dimen/size_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/size_5">

                <TextView
                    android:id="@+id/tvDocDateLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/muli_bold"
                    android:text="Doc Date :  "
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_40"
                    android:layout_weight="1.5"
                    android:background="@drawable/round_gray_backgruand"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center_vertical"
                    android:hint="Scan Item"
                    android:orientation="horizontal"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxStrokeColor="@color/colorPrimary">

                    <EditText
                        android:id="@+id/etDocDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:focusable="false"
                        android:clickable="true"
                        android:paddingEnd="@dimen/size_10"
                        android:drawableEnd="@drawable/baseline_calendar_month_24"
                        android:backgroundTint="@color/my_app_background_color"
                        android:fontFamily="@font/muli_bold"
                        android:hint="Doc Date"
                        android:text=""
                        android:paddingLeft="8sp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="12sp" />


                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/remarkView"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/size_5">

                <TextView
                    android:id="@+id/tvRemarkLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/muli_bold"
                    android:text="Remarks :  "
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_40"
                    android:layout_weight="1.5"
                    android:background="@drawable/round_gray_backgruand"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center_vertical"
                    android:hint="Remark Item"
                    android:orientation="horizontal"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxStrokeColor="@color/colorPrimary">

                    <EditText
                        android:id="@+id/etRemarks"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:backgroundTint="@color/my_app_background_color"
                        android:fontFamily="@font/muli_bold"
                        android:hint="Remark Value"
                        android:text=""
                        android:paddingLeft="8sp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="12sp" />


                </LinearLayout>
            </TableRow>

            <LinearLayout
                android:id="@+id/layoutQtySeries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/layoutGrpoAmount"
                    android:visibility="visible"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">

                    <TextView
                        android:id="@+id/tvGrpoAmountLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:visibility="visible"
                        android:fontFamily="@font/muli_bold"
                        android:text="Doc Series :"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvGrpoAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:fontFamily="@font/muli_bold"
                        android:text="0.0"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayoutSeries"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:hint="Select Series"
                    app:endIconMode="dropdown_menu">

                    <AutoCompleteTextView
                        android:id="@+id/acSeries"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_40"
                        android:backgroundTint="@color/white"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="text"
                        android:paddingLeft="@dimen/size_10"
                        android:paddingRight="@dimen/size_10"
                        android:textSize="@dimen/text_size_12" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProductionOrderList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size_10"
                android:visibility="visible"
                tools:itemCount="10"
                tools:listitem="@layout/production_order_lines_adapter_layout" />

            <ImageView
                android:id="@+id/iv_no_data_found"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:src="@drawable/nodatafound"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent_color"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="visible">

            <com.google.android.material.chip.ChipGroup
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:elevation="2dp"
                    android:fontFamily="@font/muli_bold"
                    android:text="Cancel"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:chipBackgroundColor="@color/my_app_background_color"
                    app:chipIconTint="@color/colorPrimary"
                    app:chipStrokeColor="@color/colorPrimary"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/colour_text_color" />
            </com.google.android.material.chip.ChipGroup>

            <com.google.android.material.chip.ChipGroup
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_save"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:elevation="2dp"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center_horizontal"
                    android:text="Save"
                    android:textAlignment="center"
                    android:textColor="@color/my_app_background_color"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:chipBackgroundColor="@color/colorPrimary"
                    app:chipIconTint="@color/colorPrimary"
                    app:chipStrokeColor="@color/colorPrimary"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/colour_text_color" />
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>