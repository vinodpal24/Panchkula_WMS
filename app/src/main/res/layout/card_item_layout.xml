<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="6dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="3dp"
    android:backgroundTint="@color/login_background"
    app:cardElevation="2dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/main_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5sp"
            android:paddingTop="5sp"
            android:paddingRight="5sp">

            <!-- Row 1: Date -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:paddingRight="5dp"
                android:paddingBottom="3dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:fontFamily="@font/muli_bold"
                    android:text="Date "
                    android:singleLine="true"
                    android:textSize="11sp" />
                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="75"
                    android:layout_gravity="center"
                    android:fontFamily="@font/muli_bold"
                    android:text="FRONT LITE"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </TableRow>

            <!-- Row 2: Total Scan Qty -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:paddingRight="5dp"
                android:paddingBottom="3dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:fontFamily="@font/muli_bold"
                    android:text="Total Scan Qty "
                    android:singleLine="true"
                    android:textSize="11sp" />
                <TextView
                    android:id="@+id/tv_total_scann_qty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="75"
                    android:layout_gravity="center"
                    android:text="0.0"
                    android:singleLine="true"
                    android:fontFamily="@font/muli_bold"
                    android:textSize="11sp" />
            </TableRow>

            <!-- Row 3: QR Code Scan -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:paddingRight="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/muli_bold"
                    android:text="QR Code :  "
                    android:textSize="12sp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/round_gray_backgruand"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="5sp"
                    android:paddingBottom="5sp"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxStrokeColor="@color/colorPrimary">
                    <EditText
                        android:id="@+id/ed_batch_code_scan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:backgroundTint="@color/my_app_background_color"
                        android:ellipsize="end"
                        android:focusableInTouchMode="true"
                        android:fontFamily="@font/muli_bold"
                        android:hint="Scan item"
                        android:imeOptions="actionDone|actionGo|actionSend"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingLeft="8sp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_scan_batch_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="8sp"
                        android:src="@drawable/ic_baseline_qr_code_scanner_24" />
                </LinearLayout>
            </TableRow>

            <!-- Scanned Item Layout (Initially Hidden) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingBottom="3dp">
                <LinearLayout
                    android:id="@+id/scaned_item_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/round_gray_backgruand"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:visibility="gone">

                    <!-- Batch, Item Code, Item Description, Status Rows -->
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.8"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_bold"
                                android:text="Batch        :  "
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/tv_batch"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/muli_bold"
                                android:text="1000233"
                                android:textSize="12sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_bold"
                                android:text="Doc Entry            :  "
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/tv_doc_entry"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/muli_bold"
                                android:text="102"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </TableRow>

                    <!-- Additional Table Rows for Item Code, Item Description, Status -->
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.8"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_bold"
                                android:text="ItemCode  :  "
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/tv_item_code"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="3"
                                android:fontFamily="@font/muli_bold"
                                android:text="FL-JUMBO"
                                android:textSize="12sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_bold"
                                android:text="ItemDescription  :  "
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/tv_item_desc"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="3"
                                android:fontFamily="@font/muli_bold"
                                android:text="FL-JUMBO"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </TableRow>

                    <!-- Status -->
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_bold"
                                android:text="Status       :  "
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/tv_status"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="3"
                                android:fontFamily="@font/muli_bold"
                                android:text="bdsStatus_Released"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </TableRow>

                </LinearLayout>

                <!-- RecyclerView for batch items -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_batch_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    tools:listitem="@layout/batch_items_scanned_layout"
                    tools:itemCount="2"
                    android:visibility="visible"
                    android:paddingBottom="3dp" />
            </LinearLayout>
        </TableLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
