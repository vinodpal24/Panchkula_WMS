<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8sp"
                android:layout_marginTop="10sp"
                android:gravity="center_vertical"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivOnback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_back_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/muli_bold"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="8sp"
                    android:text="@string/components"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvItemNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_regular"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="8sp"
                    android:text=" "
                    android:textSize="13sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/recycler_view_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/size_10"
            android:gravity="center_vertical|center"
            android:orientation="vertical">

            <TableRow
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/size_4">

                <TextView
                    android:id="@+id/qr_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/muli_bold"
                    android:text="Doc Date :  "
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/round_gray_backgruand"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center_vertical"
                    android:hint="Scan Item"
                    android:orientation="horizontal"
                    android:paddingTop="5sp"
                    android:paddingBottom="5sp"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxStrokeColor="@color/colorPrimary">

                    <EditText
                        android:id="@+id/etDocDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:focusable="false"
                        android:clickable="true"
                        android:paddingEnd="@dimen/size_10"
                        android:drawableEnd="@drawable/baseline_calendar_month_24"
                        android:backgroundTint="@color/my_app_background_color"
                        android:fontFamily="@font/muli_bold"
                        android:hint="Doc Date"
                        android:text=""
                        android:paddingLeft="8sp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="12sp" />


                </LinearLayout>
            </TableRow>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProductionOrderList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:itemCount="10"
                android:visibility="visible"
                tools:listitem="@layout/production_order_lines_adapter_layout" />
            <ImageView
                android:id="@+id/iv_no_data_found"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:src="@drawable/nodatafound"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent_color"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="visible"
            android:padding="5dp">

            <com.google.android.material.chip.ChipGroup
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:elevation="2dp"
                    android:fontFamily="@font/muli_bold"
                    android:text="Cancel"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    app:chipBackgroundColor="@color/my_app_background_color"
                    app:chipIconTint="@color/colorPrimary"
                    app:chipStrokeColor="@color/colorPrimary"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/colour_text_color"/>
            </com.google.android.material.chip.ChipGroup>

            <com.google.android.material.chip.ChipGroup
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_save"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:elevation="2dp"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center_horizontal"
                    android:text="Save"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textColor="@color/my_app_background_color"
                    android:textStyle="bold"
                    app:chipBackgroundColor="@color/colorPrimary"
                    app:chipIconTint="@color/colorPrimary"
                    app:chipStrokeColor="@color/colorPrimary"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/colour_text_color"/>
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>