<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.production.ui.batchCard.PoBatchCardActivity">

    <TextView
        android:id="@+id/tvNoDataFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No data found"
        android:textColor="@color/red"
        android:textSize="@dimen/text_size_20"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/scanViewPo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_15"
        android:orientation="vertical"
        android:paddingTop="3dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/qrTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:fontFamily="@font/muli_bold"
            android:text="Production Order"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_batch_items"
            android:fontFamily="@font/muli_bold"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edPoCodeScan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:fontFamily="@font/muli_bold"
                android:hint="Scan PO Qr code"
                android:paddingStart="@dimen/size_10"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivScanBatchCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="8sp"
                android:src="@drawable/ic_baseline_qr_code_scanner_24"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutData"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/size_15"
        android:layout_marginTop="@dimen/size_5"
        android:layout_marginBottom="@dimen/size_10"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/chipRfp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scanViewPo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_list_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                app:cardCornerRadius="@dimen/size_8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/layoutPoItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_border_ligh_grey"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/size_10"
                    android:paddingStart="@dimen/size_12"
                    android:paddingEnd="@dimen/size_5">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.90"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layoutTop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent">

                            <LinearLayout
                                android:id="@+id/layoutDocNum"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/layoutDocDate"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/tvDocNumLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:includeFontPadding="false"
                                    android:text="Doc Num"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_13"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvDocNum"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:includeFontPadding="false"
                                    android:paddingEnd="@dimen/size_8"
                                    android:text="672511000024"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_12" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layoutDocDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toEndOf="@+id/layoutDocNum"
                                app:layout_constraintTop_toTopOf="@+id/layoutDocNum">

                                <TextView
                                    android:id="@+id/tvDocDateLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:includeFontPadding="false"
                                    android:text="Doc Date"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_13"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvDocDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:includeFontPadding="false"
                                    android:paddingEnd="@dimen/size_8"
                                    android:text="20-05-2025"
                                    android:textAllCaps="true"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_12" />


                            </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPoStages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                tools:itemCount="2"
                tools:listitem="@layout/rv_item_stages" />
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.chip.Chip
        android:id="@+id/chipRfp"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="55dp"
        android:layout_margin="@dimen/size_10"
        android:elevation="2dp"
        android:fontFamily="@font/muli_bold"
        android:gravity="center_horizontal"
        android:text="Go To Receipt From Production"
        android:textAlignment="center"
        android:textColor="@color/my_app_background_color"
        android:textSize="14sp"
        android:textStyle="bold"
        app:chipBackgroundColor="@color/colorPrimary"
        app:chipIconTint="@color/colorPrimary"
        app:chipStrokeColor="@color/colorPrimary"
        app:chipStrokeWidth="1dp"
        app:rippleColor="@color/colour_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>