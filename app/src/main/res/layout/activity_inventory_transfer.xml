<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/head_component"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/size_10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_onback"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_arrow_back_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/muli_bold"
                            android:paddingLeft="8sp"
                            android:text="@string/components"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_item_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/muli_regular"
                            android:paddingLeft="8sp"
                            android:text=" "
                            android:textSize="13sp"
                            android:textStyle="bold" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_add"
                        android:layout_width="@dimen/size_25"
                        android:layout_height="wrap_content"
                        android:src="@drawable/plus_new" />
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/recycler_view_layout"
            android:layout_width="match_parent"
            android:paddingHorizontal="@dimen/size_10"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TableRow
                android:id="@+id/doc_View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:paddingRight="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/doc_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/muli_bold"
                    android:text="Doc Type :  "
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_40"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/round_gray_backgruand"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center_vertical"
                    android:hint="Scan Item"
                    android:orientation="horizontal"
                    android:paddingTop="5sp"
                    android:paddingBottom="5sp"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxStrokeColor="@color/colorPrimary">


                    <Spinner
                        android:id="@+id/ed_docType"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:backgroundTint="@color/my_app_background_color"
                        android:fontFamily="@font/muli_bold"
                        android:hint="Warehouse code scan"
                        android:paddingLeft="8sp"

                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="12sp" />


                </LinearLayout>
            </TableRow>

            <LinearLayout
                android:id="@+id/lay_From_warehouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/size_10"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/muli_bold"
                    android:text="From WareHouse"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/ed_from_whareHouse"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_40"
                    android:layout_marginTop="@dimen/size_2"
                    android:layout_weight="1"
                    android:background="@drawable/round_gray_backgruand"
                    android:ellipsize="end"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/muli_bold"
                    android:hint="From WareHouse"
                    android:imeOptions="actionDone|actionGo|actionSend"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="8sp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_to_warehouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:orientation="vertical"
                android:paddingTop="3dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/muli_bold"
                    android:text="To WareHouse"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/ed_to_whareHouse"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_40"
                    android:layout_marginTop="@dimen/size_2"
                    android:background="@drawable/round_gray_backgruand"
                    android:ellipsize="end"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/muli_bold"
                    android:hint="To WareHouse"
                    android:imeOptions="actionDone|actionGo|actionSend"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="8sp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/size_5">
                <LinearLayout
                    android:id="@+id/layoutQtySeries"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/size_5"
                    android:layout_weight="0.50"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/muli_bold"
                        android:text="Doc Series"
                        android:textSize="12sp"
                        android:visibility="visible" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutSeries"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-3dp"
                        android:hint="Select Series"
                        app:endIconMode="dropdown_menu">

                        <AutoCompleteTextView
                            android:id="@+id/acSeries"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_40"
                            android:backgroundTint="@color/white"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="text"
                            android:paddingLeft="@dimen/size_10"
                            android:paddingRight="@dimen/size_10"
                            android:textSize="@dimen/text_size_12" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/size_5"
                    android:paddingEnd="@dimen/size_8"
                    android:paddingBottom="@dimen/size_5"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/muli_bold"
                        android:paddingBottom="@dimen/size_2"
                        android:text="Posting Date"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etPostingDate"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_40"
                        android:background="@drawable/round_gray_backgruand"
                        android:clickable="true"
                        android:drawableEnd="@drawable/baseline_calendar_month_24"
                        android:focusable="false"
                        android:fontFamily="@font/muli_bold"
                        android:hint="Posting Date"
                        android:paddingLeft="8sp"
                        android:paddingEnd="@dimen/size_10"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginBottom="3dp"
                android:backgroundTint="@color/login_background"
                app:cardCornerRadius="@dimen/size_10"
                app:cardElevation="2dp">

                <LinearLayout
                    android:id="@+id/parentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TableLayout
                        android:id="@+id/main_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5sp"
                        android:paddingTop="5sp"
                        android:paddingRight="5sp">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingTop="3dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="3dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="25"
                                android:fontFamily="@font/muli_bold"
                                android:singleLine="true"
                                android:text="Date "
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tvDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="75"
                                android:fontFamily="@font/muli_bold"
                                android:singleLine="true"
                                android:text="FRONT LITE"
                                android:textColor="@color/black"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                        </TableRow>


                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingTop="3dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="3dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="25"
                                android:fontFamily="@font/muli_bold"
                                android:singleLine="true"
                                android:text="Total Scan Qty "
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tv_total_scann_qty"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="75"
                                android:fontFamily="@font/muli_bold"
                                android:singleLine="true"
                                android:text="0.0"
                                android:textSize="11sp" />

                        </TableRow>


                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingTop="3dp"
                            android:paddingRight="5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/muli_bold"
                                android:text="QR Code :  "
                                android:textSize="12sp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="@dimen/size_40"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="4dp"
                                android:layout_weight="1.5"
                                android:background="@drawable/round_gray_backgruand"
                                android:fontFamily="@font/muli_bold"
                                android:gravity="center_vertical"
                                android:hint="Scan Item"
                                android:orientation="horizontal"
                                android:paddingTop="5sp"
                                android:paddingBottom="5sp"
                                app:boxBackgroundColor="@android:color/transparent"
                                app:boxStrokeColor="@color/colorPrimary">

                                <EditText
                                    android:id="@+id/ed_batch_code_scan"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:backgroundTint="@color/my_app_background_color"
                                    android:ellipsize="end"
                                    android:focusableInTouchMode="true"
                                    android:fontFamily="@font/muli_bold"
                                    android:hint="Scan item"
                                    android:imeOptions="actionDone|actionGo|actionSend"
                                    android:lines="1"
                                    android:maxLines="1"
                                    android:paddingLeft="8sp"
                                    android:singleLine="true"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/iv_scan_batch_code"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="8sp"
                                    android:src="@drawable/ic_baseline_qr_code_scanner_24" />

                            </LinearLayout>
                        </TableRow>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp">

                            <LinearLayout
                                android:id="@+id/scaned_item_layout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:layout_weight="1.5"
                                android:background="@drawable/round_gray_backgruand"
                                android:fontFamily="@font/muli_bold"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:padding="8dp"
                                android:visibility="gone">

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="3dp"
                                    android:paddingBottom="3dp">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="0.8"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/muli_bold"
                                            android:text="Batch        :  "
                                            android:textColor="@color/black"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:id="@+id/tv_batch"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight="0.5"
                                            android:fontFamily="@font/muli_bold"
                                            android:text="1000233"
                                            android:textSize="12sp" />
                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/muli_bold"
                                            android:text="Doc Entry            :  "
                                            android:textColor="@color/black"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:id="@+id/tv_doc_entry"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight="0.5"
                                            android:fontFamily="@font/muli_bold"
                                            android:text="102"
                                            android:textSize="12sp" />
                                    </LinearLayout>


                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="3dp"
                                    android:paddingBottom="3dp">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="0.8"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/muli_bold"
                                            android:text="ItemCode  :  "
                                            android:textColor="@color/black"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:id="@+id/tv_item_code"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight="3"
                                            android:fontFamily="@font/muli_bold"
                                            android:text="FL-JUMBO"
                                            android:textSize="12sp" />
                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/muli_bold"
                                            android:text="ItemDescription  :  "
                                            android:textColor="@color/black"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:id="@+id/tv_item_desc"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight="3"
                                            android:fontFamily="@font/muli_bold"
                                            android:text="FL-JUMBO"
                                            android:textSize="12sp" />
                                    </LinearLayout>


                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="3dp"
                                    android:paddingBottom="3dp">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/muli_bold"
                                            android:text="Status       :  "
                                            android:textColor="@color/black"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:id="@+id/tv_status"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight="3"
                                            android:fontFamily="@font/muli_bold"
                                            android:text="bdsStatus_Released"
                                            android:textSize="12sp" />
                                    </LinearLayout>

                                </TableRow>

                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_batch_items"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:visibility="visible"
                                tools:itemCount="2"
                                tools:listitem="@layout/batch_items_scanned_layout" />

                        </LinearLayout>

                    </TableLayout>


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <ImageView
                android:id="@+id/iv_no_data_found"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:src="@drawable/nodatafound"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent_color"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="visible">

            <com.google.android.material.chip.ChipGroup
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:elevation="2dp"
                    android:fontFamily="@font/muli_bold"
                    android:text="Cancel"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:chipBackgroundColor="@color/my_app_background_color"
                    app:chipIconTint="@color/colorPrimary"
                    app:chipStrokeColor="@color/colorPrimary"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/colour_text_color" />
            </com.google.android.material.chip.ChipGroup>

            <com.google.android.material.chip.ChipGroup
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_save"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:elevation="2dp"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center_horizontal"
                    android:text="Save"
                    android:textAlignment="center"
                    android:textColor="@color/my_app_background_color"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:chipBackgroundColor="@color/colorPrimary"
                    app:chipIconTint="@color/colorPrimary"
                    app:chipStrokeColor="@color/colorPrimary"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/colour_text_color" />
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>