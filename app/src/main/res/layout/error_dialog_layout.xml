<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    app:cardCornerRadius="@dimen/size_10"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/size_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_10">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_title_rounded"
            android:paddingVertical="@dimen/size_8"
            android:paddingHorizontal="@dimen/size_10"
            android:text="Select bin location for the below items before proceeding with production issue."
            android:textAlignment="center"
            android:textSize="@dimen/text_size_16"
            android:textStyle="normal"
            android:textColor="@color/red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/size_10"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvErrorDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/rv_error_dialog_item"
                tools:itemCount="4"
                android:layout_marginTop="8dp" />
            <Button
                android:id="@+id/btnOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/size_10"
                android:layout_gravity="end
"
                android:text="Ok"/>
        </LinearLayout>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>
